// コメントアウトが可能
{
  "extends": [
    "eslint:recommended",
    // eslint-config-prettierを使う
    "prettier"
    // "eslint-plugin-prettier"を使う
    // "plugin:prettier/recommended"
    // pluginを使うにはここに書く
  ],
  // pluginを入れる
  "plugins": [
    // "eslint-plugin-prettier"を入れる
    // "prettier"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "semi": "error", //defaultになる
    // 本当はこう
    // "semi": ["error", "always"],
    // "semi": ["error", "never"],
    "quotes": ["warn", "single"],
    "indent": ["error", 2],
    // prettierの設定
    "prettier/prettier": [
      "error",
      {
        // "singleQuote": true,
        // "trailingComma": "es5"
      }
    ]
  }
}
